@{

	List<Navigation> nav = new List<Navigation>()
			{
				new Navigation(){Id=1, MenuText="Kullanıcılar",ActionName="UserPage",ControlName="Admin"},
				new Navigation(){Id=2, MenuText="Admin",ActionName="AddAdmin",ControlName="Admin"},
				new Navigation(){Id=3, MenuText="Mesajlar",ActionName="Message",ControlName="Admin"},
				new Navigation(){Id=4, MenuText="Site Ayarları",ActionName="Settings",ControlName="Admin"},

			};

}

<!DOCTYPE html>
<html>

<head>
	<!-- Basic -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<!-- Mobile Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<!-- Site Metas -->
	<meta name="keywords" content="" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<meta charset="utf-8" />

	<title>@ViewData["Title"]</title>


	<style>
		input {
			margin-top: 5px;
		}
	</style>

	@await Html.PartialAsync("_Styles")
</head>
<body>
	<div class="admin-panel" id="admin-panel">
		<!-- header section strats -->
		<header class="header_section">
			<div class="container-fluid">
				<h1 class="text-center">Admin Panel</h1>
				<div class="exit-btn">
					<a class="btn btn-outline-danger" asp-action="Exit" asp-asp-controller="Admin">Çıkış</a>
				</div>
			</div>



		</header>
	</div>
	<!-- end header section -->
	<div class="container-fluid">
		<div class="row">
			<nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
				<div class="sidebar-sticky">
					<ul class="nav navbar-nav flex-column">
						@foreach (var item in nav)
						{
							<li class="nav-item">
								@Html.ActionLink(item.MenuText, item.ActionName, item.ControlName, null, new { @class = "nav-link" })
							</li>
						}
					</ul>
				</div>
			</nav>

			@RenderBody()

		</div>
	</div>






	<!-- JavaScript -->
	@await Html.PartialAsync("_Scripts")
	;
	@await RenderSectionAsync("Scripts", required: false)


</body>

</html>