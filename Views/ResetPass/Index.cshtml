@{
	ViewData["Title"] = "Reset Password";
	Layout = "_layout2";
}

@if (TempData["Hata"] != null)
{
	<div class="alert alert-danger">@TempData["Hata"]</div>

}
else
{

	<section class="contact_section layout_padding">
		<div class="container">
			<div class="heading_container">
				<h2>
					Şifre Yenileme
				</h2>
			</div>
			<div class="">
				<div class="">
					<div class="row">
						<div class="col-md-9 mx-auto">
							<div class="@ViewData["Class"] rounded-pill" style="padding: 0px 15px 0 15px;">
								<p>@ViewData["resetPassValue"]</p>
							</div>
							<div class="contact-form">
								<form method="post">
									<div>
										<input type="password" placeholder="Yeni şifre" name="Pass" id="Pass" required maxlength="16">
									</div>
									<div>
										<input type="password" placeholder="Yeni Şifre Tekrar" name="PassR" id="PassR" required maxlength="16">
									</div>

									<div class="d-flex justify-content-center">
										<button type="submit" class="btn_on-hover" name="Gonder" id="Gonder">
											Gönder
										</button>
									</div>
								</form>
							</div>

							@section Scripts
							{
							<script type="text/javascript" src="~/js/Control.js"></script>

							<script>
								setBackgroundImage('#LoginArea', '@Model.settings[0].Banner');
							</script>

							}

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}
