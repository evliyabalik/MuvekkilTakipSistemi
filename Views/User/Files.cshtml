@model MuvekkilTakipSistemi.Models.Files

@{
	Layout = "_Layout3";
	ViewData["Title"] = "Dosyalar";


}
<div class="col-md-9">

	<div class="row">
		<div class="col-md-12" style="padding:10px">
			<div class="col-md-4" style="">

				<input type="text" id="searchInput" placeholder="Ara..." class="form-control" /><br />


			</div>
		</div>
	</div>

	<h1 class="display-4">Dosyalar</h1>

	<div class="row">
		<div class="col-md-12">
			<button class="btn btn-primary">Yeni</button>
		</div>
	</div>

	<table class="table table-striped table-success table-responsive table-hover">

		<thead>

			<tr>

				<th>Dosya No</th>
				<th>Konusu</th>
				<th>Mahkeme</th>

				<th>Müvekkil</th>
				<th>Müvekkil Grup</th>
				<th>Avukat</th>

				<th>Adres</th>
				<th>Ad/Telefon 1</th>
				<th>Ad/Telefon 2</th>
				<th>Özel Alan 1</th>
				<th>Özel Alan 2</th>

				<th>Referans</th>
				<th>Ücretli Sözleşmeli</th>
				<th>Sözleşme No</th>
				<th>Serbest dosya makbuzu kesildi</th>
				<th>Dosya Kapandı</th>


				<th>Borcu</th>

				<th>Alacağı</th>

				<th>Bakiye</th>

			</tr>

		</thead>

		<tbody id="tblBody">
		</tbody>
	</table>



</div>


@section Scripts
{
	<style>
		.table-responsive {
			max-height: 300px;
		}
	</style>

	<script type="text/javascript" src="~/js/FilesJS.js"></script>
	<script type="text/javascript" src="~/js/Control.js"></script>


	<script type="text/javascript" src="~/js/SearchData.js"></script>
}
