@{
	Layout = "_LayoutLogin";
}
<div class="container ">
	<div  style="margin-top:20%; margin-left:20%; background-color:aquamarine; padding:20px;	width:60%;">
		<form method="post" style="width:70%; margin:auto;">
			<div class="form-group">
				<h1 class="text-center">Admin Giriş</h1>
				<hr />
			</div>
			<div class="form-group">
				<input type="text" name="Kullanici_Adi" id="Kullanici_Adi" placeholder="Kullanıcı Adı" required class="form-control" />
			</div>
			<div class="form-group">
				<input type="password" name="Pass" id="Pass" placeholder="Şifre" required class="form-control" />
			</div>
			<input type="submit" value="Giriş Yap" class="btn btn-primary" />
		</form>
	</div>
</div>