@model MuvekkilTakipSistemi.Models.ControlModels.DefaultModels
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_Layout2";
}
<section class="contact_section layout_padding">
    <div class="container">
        <div class="@ViewData["Class"] rounded-pill" style="padding: 0px 15px 0 15px;">
            <p>@ViewData["forgetValue"]</p>
        </div>
        <div class="heading_container">
            <h2>
                Şifre Sıfırlama
            </h2>
            <p class="lead">
                Şifrenizi sıfılamak için Baro Sicil Numaranız ve Email Adresiniz ile siz olduğunuzu doğruladıktan sonra hesabınızın şifresini
                sıfırlamak için mail adresinize bir sıfırlama e-postası gönderilecek. Gönderilen e-posta içinde bulunan linkten şifrenizi sıfırlayabilirsiniz.
            </p>
        </div>
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-9 mx-auto">
                        <div class="contact-form">
                            <form method="post">
                                <div>
                                    <input type="text" placeholder="Baro Sicil Numanaranız " name="BaroSicilNo" id="BaroSicilNo" required maxlength="10">
                                </div>
                                <div>
                                    <input type="email" placeholder="Email Adresiniz" name="Email" id="Email" required maxlength="50">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn_on-hover">
                                        Gönder
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
                                {
    <script>
        setBackgroundImage('#LoginArea', '@Model.settings[0].Banner');
    </script>
}