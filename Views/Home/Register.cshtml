@{
	ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout2";
}
<section class="contact_section layout_padding">
    <div class="container">

        <div class="heading_container">
            <h2>
                Kayıt Ol
            </h2>
        </div>
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-9 mx-auto">
                        <div class="contact-form">
                            <form method="post">
                                <div>
                                    <input type="number" placeholder="TC No " name="Tcno" itemid="Tcno" required autofocus maxLength="11">
                                </div>

                                <div>
                                    <input type="text" placeholder="Baro Sicil Numaranız " name="BaroSicilNo" itemid="BaroSicilNo" required maxLength="10">
                                </div>

                                <div>
                                    <input type="text" placeholder="Adınız Soyadınız " name="Adsoyad" itemid="Adsoyad" required maxlength="35">
                                </div>
                                <div>
                                    <input type="text" placeholder="Telefon Numaranız örn(5xx xxx xx xx)" name="Telno" itemid="Telno" required maxlength="10">
                                </div>

                                <div>
                                    <input type="password" placeholder="Şifre" name="Pass" itemid="Pass" required maxlength="16">
                                </div>

                                <div>
                                    <input type="password" placeholder="Şifre Tekrar" name="Pass" itemid="PassR" required maxlength="16">
                                </div>


                                <div>
                                    <input type="email" placeholder="Email Adresiniz" name="Email" itemid="Email" required maxlength="50">
                                </div>
                                <div>
                                    <input type="email" placeholder="Email Adresiniz tekrar" name="Email" itemid="EmailR" required maxlength="50">
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn_on-hover">
                                        Gönder
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>