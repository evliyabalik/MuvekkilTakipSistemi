@model MuvekkilTakipSistemi.Models.ControlModels.DefaultModels

@{
	ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout2";
}




<section class="contact_section layout_padding">
    <div class="container">

        <div class="heading_container">
            <h2>
                Kayıt Ol
            </h2>
        </div>
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-9 mx-auto">

                        <div class="@ViewData["Class"] rounded-pill" style="padding: 0px 15px 0 15px;">
                            <p>@ViewData["registerValue"]</p>
                        </div>

                        <div class="contact-form">
                            <form method="post" id="
">
                                <div>
                                    <input type="number" placeholder="TC No " name="Tcno" id="Tcno" required autofocus maxLength="11">
                                </div>

                                <div>
                                    <input type="text" placeholder="Baro Sicil Numaranız " name="BaroSicilNo" id="BaroSicilNo" required maxLength="10">
                                </div>

                                <div>
                                    <input type="text" placeholder="Adınız Soyadınız " name="Adsoyad" id="Adsoyad" required maxlength="35">
                                </div>
                                <div>
                                    <input type="text" placeholder="Telefon Numaranız örn(5xx xxx xx xx)" name="Telno" id="Telno" required maxlength="10">
                                </div>

                                <div>
                                    <input type="password" placeholder="Şifre" name="Pass" id="Pass" required maxlength="16" minlength="8">
                                </div>

                                <div>
                                    <input type="password" placeholder="Şifre Tekrar" name="PassR" id="PassR" required maxlength="16" minlength="8">
                                </div>


                                <div>
                                    <input type="email" placeholder="Email Adresiniz" name="Email" id="Email" required maxlength="50">
                                </div>
                                <div>
                                    <input type="email" placeholder="Email Adresiniz tekrar" name="EmailR" id="EmailR" required maxlength="50">
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn_on-hover" id="submit">
                                        Gönder
                                    </button>
                                </div>
                            </form>

                           
                        </div>

                        @section Scripts
                        {
                            <script>
                                setBackgroundImage('#LoginArea', '@Model.settings[0].Banner');
                            </script>

                            <script type="text/javascript" src="~/js/Control.js"></script>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>