@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout2";
}

<section class="contact_section layout_padding">
    <div class="container">

        <div class="heading_container">
            <h2>
                Giriş Yap
            </h2>
        </div>
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-9 mx-auto">
                        <div class="contact-form">
                            <form method="post">
                                <div>
                                    <input type="text" placeholder="Baro Sicil No" name="BaroSicilNo" itemid="BaroSicilNo" required autofocus maxlength="10">
                                </div>
                                <div>
                                    <input type="password" placeholder="Şifre" name="Pass" itemid="Pass" required maxlength="16">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn_on-hover">
                                        Giriş Yap
                                    </button>
                                </div>
                            </form>

                            <a href=@Url.ActionLink("ForgotPass","Home")>Şifremi unuttum</a><br />
                            <a href=@Url.ActionLink("Register","Home")>Kayıt ol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</section>
